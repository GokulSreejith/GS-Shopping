<section class="view-Prod">
    <div class="container">
        <div class="row">
            <a href="/admin/add-product" class="btn btn-success">Add Product</a>
        </div>
        <h2>All Products</h2>
        <table class="table" id="table1">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">Category</th>
                    <th scope="col">Price</th>
                    <th>Image</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">*</th>
                    <td>{{this.Name}}</td>
                    <td>{{this.Category}}</td>
                    <td>{{this.Description}}</td>
                    <td>{{this.Price}}</td>
                    <td><img class="imgs" style="width: 50px; height: 50px" src="/product-images/{{this._id}}.jpeg" alt="image-missing"></td>
                    <td>
                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.Name}} ?')">Delete</a>
                        
                    </td>
                </tr>
                {{/each}}
            
            </tbody>
        </table>
    </div>
</section>