<section class="view-Prod">
    <div class="container">
        <div class="row mt-4">
        <table class="table mt-5" id="table1">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Address</th>
                    <th>Pincode</th>
                    <th>Mobile</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Payment</th>
                    <th>Status</th>
                    <th scope="col-12">Options</th>
                </tr>
            </thead>
            <tbody>
                {{#each orders}}
                <tr>
                    <td>{{this.date}}</td>
                    <td>{{this.deliveryDetails.address}}</td>
                    <td>{{this.deliveryDetails.pincode}}</td>
                    <td>{{this.deliveryDetails.mobile}}</td>
                    <td>{{this.totalAmount}}</td>
                    <td>{{this.paymentMethod}}</td>
                    <td>{{this.status}}</td>
                    <td>
                        {{#ifEquals this.status "pending"}}
                        <a href="/payment-continue/{{this._id}}" class="btn btn-success" style="margin-right: 5px;margin-bottom: 10px;">Continue</a><a href="/cancelled-status/{{this._id}}" class="btn btn-danger" style="margin-bottom: 10px;">Cancel</a> <br>
                        {{/ifEquals}}
                        <a href="/view-order-products/{{this._id}}" class="btn btn-primary">View Products</a>
                    </td>
 
                </tr>
                {{/each}}
            
            </tbody>
        </table>
        </div>
    </div>
</section>